!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Bootstrap, from Twitter
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    %link{:href => "/bootstrap/css/bootstrap.css", :rel => "stylesheet"}/
    %link{:href => "/css/style.css", :rel => "stylesheet"}/

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Automata Package
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => "/"} Editing
              %li
                %a{:href => "/about"} About
              %li
                %a{:href => "/man"} Manual
              %li
                %a{:href => "/doc"} Documentation
    .container
      .content
        .row-fluid
        .hero-unit
          .row-fluid
            -@gram.gramat.each_line do |line|
              %p="#{line}"
          .row-fluid
            %a.btn.btn-primary{:href => "/#{@gram.struct_id}/SLRStructInfoFirstFollow"} First+Follow
            %a.btn.btn-primary{:href => "/#{@gram.struct_id}/SLRStructInfoItenLR"} Itens LR(0)
            %a.btn.btn-primary{:href => "/#{@gram.struct_id}/SLRStructInfoLexTable"} Tabela SLR
            %a.btn.btn-primary{:href => "/#{@gram.struct_id}/SLRAnalyzerWordInput"} Analizador SLR
            %a.btn.btn-primary{:href => "/#{@gram.struct_id}/LLAnalyzer"} LL(1)
        .hero-unit
          .row-fluid
            %table.table-condensed.table.table-bordered
              %thead
                %tr
                  %th
                    Item
                  %th
                    Conjunto
              %tbody
                -@gram.itemSet.each do |key, value|
                  %tr
                    %th
                      = key
                    %th
                      = "#{value}"
      %footer
        %p &copy; OpenSource